html
	title Resurssin tietojen muokkaus
h1 Muokkaa resurssin #{resurssi.resurssinnimi} tietoja

form(action='/muokkaaresurssia', method='post')
	input(type='hidden' name='id' value=resurssi.id)
	label(for='resurssinnimi') resurssin nimi: 
	input(type='text' name='resurssinnimi' value=resurssi.resurssinnimi)
	br
	label(for='kayttoaikaalkaa') resurssin käyttöajan alkuajankohta: 
	input(type='time' name='kayttoaikaalkaa' value=resurssi.kayttoaikaalkaa)
	br
	label(for='kayttoaikapaattyy') resurssin käyttöajan alkuajankohta: 
	input(type='time' name='kayttoaikapaattyy' value=resurssi.kayttoaikapaattyy)
	br
	label(for='varausyksikko') varausyksikön kesto: 
	input(type='time' name='varausyksikko' value=resurssi.varausyksikko)
	br
	label(for='hinta') varausyksikön hinta: 
	input(type='number' step=0.01 name='hinta' value=resurssi.hinta)
	br
	input(type='submit')



